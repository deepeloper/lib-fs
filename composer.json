{
    "name": "deepeloper/lib-fs",
    "type": "library",
    "description": "File system library",
    "keywords": ["php", "library", "file", "system", "fs"],
    "license": "MIT",
    "homepage": "https://github.com/deepeloper/lib-fs",
    "authors": [
        {
            "name": "deepeloper",
            "homepage": "https://github.com/deepeloper",
            "role": "lead"
        }
    ],
    "support": {
        "issues": "https://github.com/deepeloper/lib-fs/issues"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.3 <7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "3.*",
        "friendsofphp/php-cs-fixer": "*"
     },
    "autoload": {
        "psr-4": {
             "deepeloper\\Lib\\FileSystem\\": "src"
         }
    },
    "autoload-dev": {
        "psr-4": {
             "deepeloper\\Lib\\FileSystem\\": "tests"
         }
    },
    "scripts": {
        "phpcs": "phpcs --standard=PSR12"
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": true
        }
    }
}
